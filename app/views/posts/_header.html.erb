<div id="header">
	<% if current_page?(root_path) %>
  		<%= link_to "Mending Me", root_path %>
  	<% elsif current_page?(about_path) %>
  		<p>About Me + About Mending </p>
  	<% elsif current_page?(posts_path(@post)) %>
  		<%= link_to "Back To All Posts", root_path %>
  	<% else %>
  		<%= link_to "Mending Me", root_path %>
  	<% end %>

  	<% if user_signed_in? %>
	  	<div class="buttons">
	  		<%= link_to "New Post", new_post_path, class: "btn" %>
	  		<%= link_to "Log Out", posts_path, class: "btn" %>
	  	</div>
	<% end %> 

</div>